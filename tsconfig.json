{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["./src/*"],
	  "@assets/*": ["./assets/*"],
	  "@components/*": ["./src/components/*"],
	  "@utils/*": ["./src/utils/*"],
	  "@icons/*": ["./src/icons/*"],
	  "@store/*": ["./src/store/*"],
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["tools/**/*"],
}
